import random

def change_answer(answer):
    sentence = ""
    for x in range(len(answer)):
        if answer[x] != " " and answer[x] != "," and answer[x] != "." and answer[x] != "ㆍ" and answer[x] != "-":
            sentence += answer[x]
    return sentence


while True:
    try:
        number = int(input("몇 문제를 하시겠습니까 (1 ~ 52): "))
        if 1 <= number <= 52:
            break
        else:
            print("다시 입력해 주세요.")
    except:
        print("숫자만 입력해 주세요.")


order = []
while len(order) < number:
    random_int = random.randrange(1, 53)
    if not random_int in order:
        order.append(random_int)

problems = ["흥선 대원군이 군정(군포납부)의 부정을 바로잡기 위해 양반들에게도 군포를 부과했던 정책은?",
            "흥선 대원군이 경복궁 중건 비용을 마련하기 위해 발행해 경제를 혼란하게 했던 화폐는?",
            "선교사 처형을 구실로 프랑스 함대가 강화도를 침략해 외규장각 도서와 문화재 들을 약탈했던 사건은?",
            "미국 함대가 강화도를 침략했던 신미양요의 구실이 되었던 사건은?",
            "흥선 대원군이 통상 수교 거부 의사를 널리 알리기 위해 전국에 세웠던 비석은?",
            "조선이 외국과 맺은 최초의 근대적 조약으로 일본에 해안 측량권과 치외법권을 인정해 일본의 침략을 쉽게 한 불평등 조약은?",
            "강화도 조약의 구실이 된, 일본군함이 강화도 해안을 측량하다 조선군과 충돌을 일으켰던 사건은?",
            "강화도 조약 이후 개화 정책을 추진하면서 설치했던 신식 군대는?",
